{
  "name": "create-deployment-action",
  "version": "2.1.6",
  "private": true,
  "description": "Github Action to handle deployment creation lifecycle for a workflow job",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "version": "npm run build && npm run package && git add -- dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smartlyio/create-deployment-action.git"
  },
  "keywords": [
    "actions",
    "deployment"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.5.0",
    "@actions/github": "5.0.0",
    "@octokit/types": "6.26.0"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/node": "16.7.8",
    "@typescript-eslint/parser": "4.31.0",
    "@vercel/ncc": "0.30.0",
    "eslint": "7.32.0",
    "eslint-plugin-github": "4.2.0",
    "eslint-plugin-jest": "24.4.0",
    "jest": "27.1.0",
    "jest-circus": "27.1.0",
    "js-yaml": "4.1.0",
    "nock": "13.1.3",
    "prettier": "2.3.2",
    "ts-jest": "27.0.5",
    "typescript": "4.4.2"
  }
}
